<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <TextView
        android:id="@+id/txtBidAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="200"
        android:textSize="@dimen/text_item"
        android:textColor="@color/colorBlack"
        android:layout_margin="@dimen/default_padding_small"/>
    <TextView
        android:id="@+id/txtBidPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="93.0112"
        android:textSize="@dimen/text_item"
        android:textAlignment="viewEnd"
        android:textColor="@color/textColorPrimary"
        android:layout_margin="@dimen/default_padding_small"/>
    <TextView
        android:id="@+id/txtAskPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="93.0112"
        android:textSize="@dimen/text_item"
        android:textColor="@color/colorGreen"
        android:layout_margin="@dimen/default_padding_small"/>
    <TextView
        android:id="@+id/txtAskAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="100"
        android:textSize="@dimen/text_item"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorBlack"
        android:layout_margin="@dimen/default_padding_small"/>
</LinearLayout>