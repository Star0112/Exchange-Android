<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llConfirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:visibility="visible">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_header_height">

        <ImageView
            android:id="@+id/btnBackConfirm"
            style="@style/DialogCancelButton.Back"/>
        <TextView
            style="@style/DialogTitleText"
            android:text="@string/load_balance_confirm"/>
        <ImageView
            android:id="@+id/btnCloseConfirm"
            style="@style/DialogCancelButton"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            android:padding="@dimen/default_padding">

            <ImageView
                android:id="@+id/imgConfirmCoin"
                android:layout_width="@dimen/coin_size"
                android:layout_height="@dimen/coin_size" />
            <TextView
                android:id="@+id/txtConfirmCoin"
                android:layout_marginTop="@dimen/default_padding"
                style="@style/ItemTextBold"
                android:text="0.1 SXP"
                android:textSize="@dimen/text_item_3x"/>
        </LinearLayout>

        <LinearLayout
            style="@style/SettingButtonTransparent">

            <TextView
                android:layout_weight="1"
                style="@style/ItemText"
                android:text="@string/fee"/>
            <TextView
                android:id="@+id/txtFee"
                style="@style/ItemText"
                android:text="$0.00"
                android:textColor="@color/colorGray"/>
        </LinearLayout>
        <include layout="@layout/divider_full"/>
        <LinearLayout
            style="@style/SettingButtonTransparent">

            <TextView
                android:layout_weight="1"
                style="@style/ItemText"
                android:text="@string/total"/>
            <TextView
                android:id="@+id/txtTotal"
                style="@style/ItemText"
                android:text="$0.00"
                android:textColor="@color/colorGray"/>
        </LinearLayout>
        <include layout="@layout/divider_full"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin_2x">

        <include layout="@layout/group_pass"/>
    </FrameLayout>
</LinearLayout>
