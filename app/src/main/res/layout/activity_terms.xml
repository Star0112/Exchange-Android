<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <TextView
                style="@style/TitleText.Dark"
                android:text="@string/welcome"/>
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:src="@mipmap/new_logo"/>
        <TextView
            android:gravity="center"
            android:layout_marginStart="@dimen/default_margin_2x"
            android:layout_marginEnd="@dimen/default_margin_2x"
            style="@style/DefaultText"
            android:alpha="0.5"
            android:lineSpacingExtra="4dp"
            android:text="@string/review_policy_and_terms"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/default_padding_2x"
            android:layout_marginEnd="@dimen/default_padding_2x"
            android:layout_marginTop="@dimen/default_padding_2x"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_item_height"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="onTerms"
                    android:paddingStart="@dimen/default_padding_3x"
                    android:paddingEnd="@dimen/default_padding_3x">

                    <TextView
                        android:layout_weight="1"
                        style="@style/ItemTextBold"
                        android:text="@string/terms_of_service"
                        android:textColor="@color/textColorBlack"/>
                    <ImageView
                        android:id="@+id/imgArrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorAccent"/>
                </LinearLayout>
                <WebView
                    android:id="@+id/webView1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/default_padding_3x"
                    android:paddingEnd="@dimen/default_padding_3x">

                    <include layout="@layout/divider_full"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_item_height"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="onPrivacy"
                    android:paddingStart="@dimen/default_padding_3x"
                    android:paddingEnd="@dimen/default_padding_3x">

                    <TextView
                        android:layout_weight="1"
                        style="@style/ItemTextBold"
                        android:text="@string/privacy_policy"
                        android:textColor="@color/textColorBlack"/>
                    <ImageView
                        android:id="@+id/imgArrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorGrayLight"/>
                </LinearLayout>
                <WebView
                    android:id="@+id/webView2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding_2x"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:contentPadding="@dimen/default_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/default_padding_2x"
                android:paddingEnd="@dimen/default_padding">

                <TextView
                    android:id="@+id/txtTerms"
                    android:layout_weight="1"
                    style="@style/DefaultText"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/accept_terms"
                    android:textColor="@color/textColorGray"
                    android:textSize="@dimen/text_item"/>
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnNext"
            android:enabled="false"
            android:layout_marginBottom="@dimen/default_margin"
            android:onClick="onNext"
            style="@style/DefaultButton.Dark"
            android:text="@string/button_next"/>
    </LinearLayout>

    <include layout="@layout/progress"/>
</FrameLayout>
