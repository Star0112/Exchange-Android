<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/background">
        <include  layout="@layout/activity_main_header"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAssetBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/selectCoin"
            android:background="@drawable/button_dropdown"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dialog"
            style="@style/SpinnerInput"/>
        <Button
            android:id="@+id/btnSelectSymbol"
            style="@style/SpinnerInput"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_dropdown"
            android:textSize="@dimen/spinner_size"
            android:textColor="@drawable/text_white_color"
            android:spinnerMode="dialog"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_dialog_gray"
            android:layout_marginTop="@dimen/default_margin"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        style="@style/Input.White.Vertical.Description"/>
                    <EditText
                        android:id="@+id/buyPrice"
                        android:layout_width="match_parent"
                        android:inputType="numberDecimal"
                        android:enabled="false"
                        style="@style/Input.Disable.Vertical.Center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                        style="@style/Input.White.Vertical.Description"/>
                    <EditText
                        android:id="@+id/buyAmount"
                        android:layout_width="match_parent"
                        android:maxLength="10"
                        android:imeActionLabel="@string/button_go"
                        android:imeOptions="actionGo"
                        android:inputType="number"
                        style="@style/Input.White.Vertical.Center" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnBuy"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/tab_height_small"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/buy"
                style="@style/DefaultButton.White"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>