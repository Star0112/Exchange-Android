<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="@dimen/default_margin"
    android:layout_marginEnd="@dimen/default_margin"
    android:layout_marginTop="@dimen/default_padding"
    android:layout_marginBottom="@dimen/default_padding"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/default_padding_2x">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_padding"/>
            <TextView
                android:id="@+id/txtName"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/ItemText"
                android:text="Bank 1"
                android:textAlignment="viewStart"
                android:textSize="@dimen/text_button"/>
            <TextView
                android:id="@+id/txtAccount"
                android:layout_width="wrap_content"
                style="@style/ItemText"
                android:text="Bank 1"
                android:textAlignment="viewStart"
                android:textSize="@dimen/text_item_title"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                style="@style/ItemText"
                android:text="Bank 1"
                android:textSize="@dimen/text_button"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding">

            <LinearLayout
                android:id="@+id/llRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="@dimen/default_padding_small">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:src="@mipmap/ic_delete"/>
                <TextView
                    style="@style/ItemText"
                    android:text="@string/remove"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle_status"
                    android:tint="@color/colorPendingLight"/>
                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/status_text_width"
                    style="@style/ItemText"
                    android:text="Pending"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/textColorGray"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
