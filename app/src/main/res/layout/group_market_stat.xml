<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/default_padding_3x"
    android:paddingEnd="@dimen/default_padding_3x">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_market_cap"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/title"
        style="@style/DefaultText"
        android:text="Market Cap"
        android:textColor="@color/textColorGray5"/>
    <TextView
        android:id="@+id/value"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height_small"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/default_margin"
        style="@style/ItemTextBold"
        android:text="$68.2 Billion"
        android:textAlignment="viewEnd"
        android:textColor="@color/textColorDarkGreyBlue"
        android:textSize="@dimen/text_tab"/>
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_arrow_down"/>
</LinearLayout>
