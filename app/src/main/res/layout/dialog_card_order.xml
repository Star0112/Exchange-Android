<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <LinearLayout
        android:id="@+id/llOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_header_height">

            <TextView
                android:id="@+id/txtTitle"
                style="@style/DialogTitleText"
                android:text="@string/card_order_confirm"/>
            <ImageView
                android:id="@+id/btnClose"
                style="@style/DialogCancelButton"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorBackground">

            <LinearLayout
                android:id="@+id/llUpgrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/colorListBackground"
                android:padding="@dimen/default_padding">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_lock"/>
                    <TextView
                        android:id="@+id/txtUpgradeAmount"
                        android:layout_marginStart="@dimen/default_margin"
                        style="@style/DefaultText"
                        android:text="10,000 SXP"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtUpgradeHelp"
                    android:layout_marginTop="@dimen/default_padding"
                    style="@style/ItemText"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/card_upgrade_help"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_item_small"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtLock"
                style="@style/ItemHeaderText"
                android:text="@string/swipe_lock"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding_2x"
                android:layout_marginEnd="@dimen/default_padding_2x"
                android:layout_marginBottom="@dimen/default_padding_small"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/SettingButton">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SettingItemText"
                                android:text="@string/swipe_balance"/>
                            <LinearLayout
                                android:id="@+id/llLowBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/indicator_size"
                                    android:layout_height="@dimen/indicator_size"
                                    android:src="@mipmap/ic_warning"
                                    android:tint="@color/colorAccent"/>
                                <TextView
                                    android:layout_marginStart="@dimen/default_padding_small"
                                    style="@style/SettingItemText"
                                    android:alpha="0.5"
                                    android:text="@string/low_balance"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/text_item"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txtBalance"
                            style="@style/DefaultText"
                            android:text="$0.00"
                            android:textColor="@color/textColorGray"/>
                    </LinearLayout>
                    <include layout="@layout/divider_full"/>
                    <LinearLayout
                        style="@style/SettingButton">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/SettingItemText"
                                android:text="@string/swipe_lock"/>
                            <LinearLayout
                                android:id="@+id/llLock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/indicator_size"
                                    android:layout_height="@dimen/indicator_size"
                                    android:src="@mipmap/ic_lock"
                                    android:tint="@color/textColorGray"/>
                                <TextView
                                    android:id="@+id/txtLockPeriod"
                                    android:layout_marginStart="@dimen/default_padding_small"
                                    style="@style/SettingItemText"
                                    android:alpha="0.5"
                                    android:lineSpacingExtra="4dp"
                                    android:text="@string/month_lock"
                                    android:textColor="@color/textColorGray"
                                    android:textSize="@dimen/text_item"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txtLockAmount"
                            style="@style/DefaultText"
                            android:text="0"
                            android:textColor="@color/textColorGray"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                style="@style/ItemHeaderText"
                android:text="@string/membership_fee"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding_2x"
                android:layout_marginEnd="@dimen/default_padding_2x"
                android:layout_marginBottom="@dimen/default_padding_small"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height_small"
                    style="@style/SettingButton">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/SettingItemText"
                            android:text="@string/membership_fee"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/indicator_size"
                                android:layout_height="@dimen/indicator_size"
                                android:src="@mipmap/ic_tab_price"
                                android:tint="@color/textColorGray"/>
                            <TextView
                                android:layout_marginStart="@dimen/default_padding_small"
                                style="@style/ItemText"
                                android:alpha="0.5"
                                android:text="@string/onetime_fee"
                                android:textSize="@dimen/text_item"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtFee"
                        style="@style/DefaultText"
                        android:text="$0.00"
                        android:textColor="@color/textColorGray"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                style="@style/ItemHeaderText"
                android:text="@string/pay_with"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding_2x"
                android:layout_marginEnd="@dimen/default_padding_2x"
                android:layout_marginBottom="@dimen/default_padding_small"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:id="@+id/llCoin"
                    android:layout_height="@dimen/item_height_small"
                    style="@style/SettingButton">

                    <ImageView
                        android:id="@+id/imgCoin"
                        android:layout_width="@dimen/coin_size_small"
                        android:layout_height="@dimen/coin_size_small"/>
                    <TextView
                        android:id="@+id/txtCoin"
                        android:layout_marginStart="@dimen/default_margin"
                        style="@style/ItemText"
                        android:text="BItcoin"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtAmount"
                            style="@style/DefaultText"
                            android:text="$0.00"
                            android:textColor="@color/textColorGray"/>
                        <TextView
                            style="@style/ItemText"
                            android:text="@string/change_method"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_item"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin"
                        android:src="@mipmap/ic_forward"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/default_margin"
                android:paddingStart="@dimen/default_padding_3x"
                android:paddingEnd="@dimen/default_padding_3x">

                <TextView
                    android:id="@+id/txtTerms"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ItemText"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/cardholder_terms"/>
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin"/>
            </LinearLayout>

            <include layout="@layout/group_pass"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/dialog_select_wallet"/>

    <include layout="@layout/progress"/>

</FrameLayout>
