<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/background">
        <include  layout="@layout/activity_main_header"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <Spinner
                    android:id="@+id/selectCoin"
                    android:background="@drawable/button_dropdown"
                    android:layout_gravity="center_horizontal"
                    android:spinnerMode="dropdown"
                    style="@style/SpinnerInput"/>

                <EditText
                    android:id="@+id/buyPrice"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    android:layout_marginStart="@dimen/default_margin_2x"
                    style="@style/Input.White.Center"/>

                <EditText
                    android:id="@+id/buyAmount"
                    android:layout_width="match_parent"
                    android:imeActionLabel="@string/button_go"
                    android:imeOptions="actionGo"
                    android:hint="@string/amount"
                    android:inputType="number"
                    android:layout_marginStart="@dimen/default_margin_2x"
                    style="@style/Input.White.Center" />

                <Button
                    android:id="@+id/btnBuy"
                    android:layout_width="@dimen/button_width"
                    android:layout_marginTop="@dimen/default_margin"
                    android:text="@string/buy"
                    android:layout_height="@dimen/tab_height_small"
                    style="@style/DefaultButton.White"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/bg_dialog"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/coin_balance"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_title_default"
                android:layout_margin="@dimen/default_margin"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/assetBalance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>