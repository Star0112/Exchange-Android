<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/txtTitle"
            style="@style/TitleText"
            android:text="@string/swipe_financial"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            android:layout_marginTop="@dimen/default_margin_xxxlarge"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/default_padding"
                    android:paddingEnd="@dimen/default_padding">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBank"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/mask_height"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/img_bank"/>
                            <TextView
                                android:layout_marginTop="@dimen/default_margin"
                                style="@style/DefaultText"
                                android:text="@string/title_bank"
                                android:textColor="@color/textColorGray"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardLoans"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/mask_height"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/img_loans"/>
                            <TextView
                                android:layout_marginTop="@dimen/default_margin"
                                style="@style/DefaultText"
                                android:text="@string/loans"
                                android:textColor="@color/textColorGray"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/default_padding"
                    android:paddingEnd="@dimen/default_padding">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardInterest"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/mask_height"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/img_interest"/>
                            <TextView
                                android:layout_marginTop="@dimen/default_margin"
                                style="@style/DefaultText"
                                android:text="@string/interest"
                                android:textColor="@color/textColorGray"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardInvest"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/mask_height"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/img_invest"/>
                            <TextView
                                android:layout_marginTop="@dimen/default_margin"
                                style="@style/DefaultText"
                                android:text="@string/educate"
                                android:textColor="@color/textColorGray"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="@dimen/default_margin"
                    style="@style/ItemText"
                    android:text="@string/swipe_financial_description"
                    android:textAlignment="center"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/default_margin">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/bank_help"/>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>
