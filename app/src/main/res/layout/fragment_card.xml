<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                style="@style/NewTitleText"
                android:text="@string/card"/>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/txtTapCardNumbers"
            android:layout_gravity="center_horizontal|bottom"
            style="@style/DefaultText"
            android:alpha="0.5"
            android:text="@string/tap_card_numbers"
            android:textSize="@dimen/text_tab"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height">

            <include layout="@layout/pager_card"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/llCardDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/default_padding">

            <TextView
                style="@style/ItemTextBold"
                android:text="@string/full_card_features"
                android:textColor="@color/colorSalmon"
                android:textSize="@dimen/text_tab"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:src="@mipmap/ic_forward"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="@dimen/default_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/default_margin_2x"
                    android:paddingEnd="@dimen/default_margin_2x"
                    android:paddingBottom="@dimen/default_padding_2x"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            style="@style/ItemTextBold"
                            android:text="@string/daily_limit"
                            android:textAlignment="viewStart"/>
                        <TextView
                            android:id="@+id/txtDailyLimit"
                            style="@style/ItemText"
                            android:text="$10,000"/>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_white"
                        android:layout_marginTop="@dimen/default_margin_small"
                        android:padding="3dp">

                        <ProgressBar
                            android:id="@+id/progressCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="4dp"
                            style="@style/ProgressBarHorizontal"/>
                    </FrameLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/imgGPay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/action_button_height"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="@dimen/default_margin_small"
                    android:src="@mipmap/google_pay"
                    android:visibility="gone"/>
                <TextView
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/default_padding_3x"
                    style="@style/ItemTextBold"
                    android:letterSpacing="0.1"
                    android:text="@string/funding_source"
                    android:textAllCaps="true"
                    android:textColor="#a3a3a3"
                    android:textSize="@dimen/text_small"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/llFunding"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginStart="@dimen/default_padding_3x"
                    android:layout_marginEnd="@dimen/default_padding_3x"
                    android:layout_marginTop="@dimen/default_padding"
                    android:layout_marginBottom="@dimen/default_padding_2x"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/default_margin"
                        android:paddingEnd="@dimen/default_margin">

                        <ImageView
                            android:id="@+id/imgFundingCoin"
                            android:layout_width="@dimen/coin_size_small"
                            android:layout_height="@dimen/coin_size_small"/>
                        <TextView
                            android:id="@+id/txtFundingCoin"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/default_padding_2x"
                            style="@style/ItemTextBold"
                            android:textColor="@color/textColorDarkGreyBlue"
                            android:textSize="@dimen/text_tab"/>
                        <TextView
                            android:id="@+id/txtFundingBalance"
                            style="@style/DefaultText"
                            android:textColor="#979ea3"
                            android:textSize="@dimen/text_tab"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin"
                            android:src="@mipmap/ic_forward"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llBalance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/default_margin_2x"
                        android:paddingEnd="@dimen/default_margin_2x"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingBottom="@dimen/default_padding_2x">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_weight="1"
                                style="@style/ItemTextBold"
                                android:text="@string/card_balance"
                                android:textAlignment="viewStart"/>
                            <TextView
                                android:id="@+id/txtBalance"
                                style="@style/DefaultText"
                                android:text="$0.00"
                                android:textColor="@color/textColorGreenDark"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="match_parent"
                            android:gravity="end"
                            android:layout_marginTop="@dimen/default_margin"
                            android:layout_marginBottom="@dimen/default_margin"
                            style="@style/ItemText"
                            android:text="10/10/19"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_weight="1"
                                style="@style/ItemTextBold"
                                android:text="@string/pending_load"/>
                            <TextView
                                android:id="@+id/txtPending"
                                style="@style/DefaultText"
                                android:text="$0.00"
                                android:textColor="@color/colorPending"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
                <Button
                    android:id="@+id/btnLoad"
                    android:layout_marginBottom="@dimen/default_margin"
                    style="@style/DefaultButton.Dark"
                    android:text="@string/load_card_balance"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/llBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_dialog"
            android:elevation="10dp"
            android:layout_marginTop="?attr/actionBarSize">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="@drawable/bg_button_white2"
                android:backgroundTint="@color/colorBorder"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_padding"/>
            <com.marshalchen.ultimaterecyclerview.UltimateRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/default_padding"
                android:nestedScrollingEnabled="true">

                <TextView
                    android:id="@+id/txtNoTransactions"
                    android:lineSpacingExtra="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/default_margin_3x"
                    android:layout_marginEnd="@dimen/default_margin_3x"
                    android:layout_marginTop="@dimen/default_margin_xlarge"
                    style="@style/DefaultText"
                    android:text="@string/no_card_transactions"
                    android:textAlignment="center"
                    android:visibility="gone"/>
            </com.marshalchen.ultimaterecyclerview.UltimateRecyclerView>
        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
