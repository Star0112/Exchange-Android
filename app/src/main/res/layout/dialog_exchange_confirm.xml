<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dialog"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_header_height">

            <TextView
                style="@style/DialogTitleText"
                android:text="@string/confirm"/>
            <ImageView
                android:id="@+id/btnClose"
                style="@style/DialogCancelButton"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorBackground"
                android:padding="@dimen/default_padding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgCoinFrom"
                        android:layout_width="@dimen/coin_size"
                        android:layout_height="@dimen/coin_size"
                        android:layout_marginTop="@dimen/default_margin"/>
                    <TextView
                        android:id="@+id/txtAmountFrom"
                        android:layout_marginTop="@dimen/default_margin_small"
                        style="@style/ItemTextBold"
                        android:lines="2"
                        android:text="0.1 SXP"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_title"/>
                </LinearLayout>
                <TextView
                    style="@style/SettingItemText"
                    android:alpha="0.5"
                    android:text="TO"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgCoinTo"
                        android:layout_width="@dimen/coin_size"
                        android:layout_height="@dimen/coin_size"
                        android:layout_marginTop="@dimen/default_margin"/>
                    <TextView
                        android:id="@+id/txtAmountTo"
                        android:layout_marginTop="@dimen/default_margin_small"
                        style="@style/ItemTextBold"
                        android:lines="2"
                        android:text="0.1 SXP"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_title"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding_2x"
                android:layout_marginEnd="@dimen/default_padding_2x"
                android:layout_marginBottom="@dimen/default_padding_small"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/DialogItem">

                        <TextView
                            android:layout_weight="1"
                            style="@style/SettingItemText"
                            android:text="@string/amount"/>
                        <TextView
                            android:id="@+id/txtAmount"
                            style="@style/DefaultText"
                            android:text="1 SXP = 0.0003 BTC"
                            android:textColor="@color/textColorGray"/>
                    </LinearLayout>
                    <include layout="@layout/divider_full"/>
                    <LinearLayout
                        style="@style/DialogItem">

                        <TextView
                            android:layout_weight="1"
                            style="@style/SettingItemText"
                            android:text="@string/exchanging_to"/>
                        <TextView
                            android:id="@+id/txtExchangingTo"
                            style="@style/DefaultText"
                            android:text="0.0000 BTC"
                            android:textColor="@color/textColorGray"/>
                    </LinearLayout>
                    <include layout="@layout/divider_full"/>
                    <LinearLayout
                        style="@style/DialogItem">

                        <TextView
                            android:layout_weight="1"
                            style="@style/SettingItemText"
                            android:text="@string/exchanging_from"/>
                        <TextView
                            android:id="@+id/txtExchangingFrom"
                            style="@style/DefaultText"
                            android:text="0 SXP"
                            android:textColor="@color/textColorGray"/>
                    </LinearLayout>
                    <include layout="@layout/divider_full"/>
                    <LinearLayout
                        style="@style/DialogItem">

                        <TextView
                            android:layout_weight="1"
                            style="@style/SettingItemText"
                            android:text="@string/fee"/>
                        <TextView
                            android:id="@+id/txtFee"
                            style="@style/DefaultText"
                            android:text="0 SXP"
                            android:textColor="@color/textColorGray"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <include layout="@layout/group_pass"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/progress"/>

</FrameLayout>
