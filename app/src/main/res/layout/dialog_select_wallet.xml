<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llSelectWallet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:visibility="visible">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_header_height">

        <ImageView
            android:id="@+id/btnBackSelect"
            style="@style/DialogCancelButton.Back"/>
        <ImageView
            android:id="@+id/btnCloseSelect"
            style="@style/DialogCancelButton"/>
        <TextView
            style="@style/DialogTitleText"
            android:text="@string/select_wallet"/>
    </FrameLayout>

    <include layout="@layout/divider_full"/>
    <EditText
        android:id="@+id/editSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_button_height"
        android:background="@drawable/bg_search"
        android:backgroundTint="@color/colorBackground"
        android:drawableStart="@mipmap/ic_search"
        android:drawablePadding="@dimen/default_padding_2x"
        android:imeOptions="actionSearch"
        android:layout_marginStart="@dimen/default_padding_3x"
        android:layout_marginEnd="@dimen/default_padding_3x"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:paddingStart="@dimen/default_padding_2x"
        android:paddingEnd="@dimen/default_padding_2x"
        style="@style/DefaultInput"
        android:hint="@string/search_hint"
        android:textSize="@dimen/text_tab"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBackground">

        <TextView
            android:id="@+id/txtDialogTitle"
            android:layout_weight="1"
            style="@style/ItemHeaderText"
            android:text="@string/wallets"
            android:textAllCaps="true"
            android:textColor="@color/textColorGray"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_list_height"
            android:layout_marginStart="@dimen/default_padding_3x"
            android:layout_marginEnd="@dimen/default_padding_3x"
            android:layout_marginBottom="@dimen/default_padding_3x"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
