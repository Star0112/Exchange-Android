<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/button_width"
    android:layout_height="@dimen/card_height">
    <LinearLayout
        android:id="@+id/coinBalance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="@dimen/default_padding_small">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/default_padding_tiny"
            android:layout_marginBottom="@dimen/default_margin_small"
            android:layout_marginStart="@dimen/default_margin_small"
            android:foreground="?android:selectableItemBackground"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/button_border_radius"
            app:cardElevation="@dimen/default_padding_small"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/default_padding_2x"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/coinIcon"
                        android:layout_width="@dimen/coin_size_small"
                        android:layout_height="@dimen/coin_size_small"
                        android:src="@mipmap/ic_launcher_round" />
                    <TextView
                        android:id="@+id/coinName"
                        style="@style/BuyText.Value"
                        android:text="@string/BTC"
                        android:textSize="@dimen/text_title_default"
                        android:layout_marginLeft="@dimen/default_padding_2x"/>
                </LinearLayout>
                <TextView
                    style="@style/BuyText.Title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/total_balance"
                    android:textSize="@dimen/text_item_small"
                    android:layout_marginTop="@dimen/default_padding_2x"/>
                <TextView
                    android:id="@+id/txtTotalBalance"
                    style="@style/BuyText.Value"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="10400,00"
                    android:textSize="@dimen/text_default"
                    android:layout_marginTop="@dimen/default_padding_small"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/default_padding_small"
                    android:layout_marginBottom="@dimen/default_padding"
                    android:background="@color/colorDivider" />
                <TextView
                    style="@style/BuyText.Title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_item_small"
                    android:text="@string/available_balance"/>
                <TextView
                    android:id="@+id/txtAvailableBalance"
                    style="@style/BuyText.Value"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="980,00"
                    android:textSize="@dimen/text_default"
                    android:layout_marginTop="@dimen/default_padding_small"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>