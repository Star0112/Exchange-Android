<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingStart="@dimen/default_margin"
    android:paddingEnd="@dimen/default_margin">

    <ImageView
        android:id="@+id/imgType"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginTop="@dimen/default_margin_small"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/default_margin_small"
        android:layout_marginTop="@dimen/default_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtType"
                android:layout_weight="1"
                style="@style/TitleText"
                android:text="Sent Bitcoin Cash"
                android:textAlignment="viewStart"
                android:textSize="@dimen/text_tab"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgLock"
                    android:layout_width="14dp"
                    android:layout_height="@dimen/text_button"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:src="@mipmap/ic_lock"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtAmount"
                    style="@style/TitleText"
                    android:text="To drake"
                    android:textSize="@dimen/text_tab"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_small"
            android:layout_marginBottom="@dimen/default_margin_small">

            <TextView
                android:id="@+id/txtWhere"
                android:layout_weight="1"
                style="@style/DefaultText"
                android:alpha="0.3"
                android:text="0.00"
                android:textAlignment="viewStart"
                android:textSize="@dimen/text_small"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle_status"
                    android:tint="@color/colorPendingLight"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/status_text_width"
                    android:gravity="end"
                    style="@style/DefaultText"
                    android:alpha="0.3"
                    android:text="0.00"
                    android:textSize="@dimen/text_small"/>
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/divider_full"/>
    </LinearLayout>
</LinearLayout>
