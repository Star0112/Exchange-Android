<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/txtTitle"
            android:gravity="center"
            android:maxLines="2"
            style="@style/TitleText.Dark"
            android:text="Amazon"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtTime"
            style="@style/ItemText"
            android:alpha="0.5"
            android:text="Created a minute ago"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gift_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/default_padding_3x"
            android:layout_marginEnd="@dimen/default_padding_3x"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_padding"
            app:cardBackgroundColor="@color/colorBlue"
            app:cardCornerRadius="22dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgCard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_height_small"
                    android:adjustViewBounds="true"
                    android:layout_margin="@dimen/default_margin"/>
                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_height="wrap_content"
                    style="@style/TitleText.Dark"
                    android:text="$0"
                    android:textSize="@dimen/text_xlarge"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <TextView
            style="@style/DefaultText"
            android:alpha="0.5"
            android:text="@string/claim_code"
            android:textSize="@dimen/text_title_default"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txtCode"
            android:layout_margin="@dimen/default_margin_small"
            style="@style/TitleText"
            android:textAlignment="center"
            android:textSize="@dimen/text_title"
            android:visibility="gone"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/default_padding_2x">

        <Button
            android:id="@+id/btnLink"
            android:layout_marginBottom="@dimen/default_padding_small"
            style="@style/DefaultButton.Dark"
            android:text="@string/view_gift_card"/>
        <Button
            android:id="@+id/btnLock"
            style="@style/DefaultButton.Transparent"
            android:text="@string/card_already_used"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
</LinearLayout>
