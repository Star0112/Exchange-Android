<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"/>
        <TextView
            android:layout_marginBottom="@dimen/default_margin"
            style="@style/TitleText"
            android:text="@string/phone_input_label"
            android:textSize="@dimen/text_title"/>
        <LinearLayout
            android:gravity="center_vertical"
            style="@style/LoginInput">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ccp_arrowColor="@color/colorAccent"
                app:ccp_autoFormatNumber="true"
                app:ccp_defaultNameCode="ca"
                app:ccp_hintExampleNumber="true"
                app:ccp_showArrow="true"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="false"
                app:ccp_textSize="@dimen/text_button"
                app:ccpDialog_showPhoneCode="true"
                app:ccpDialog_textColor="@color/textColorDefault"/>
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparent"
                android:enabled="false"
                android:imeActionLabel="@string/button_next"
                android:imeOptions="actionNext"
                android:inputType="phone"
                style="@style/DefaultInput"
                android:hint=""
                android:textSize="@dimen/text_button"/>
        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/default_margin_2x"
            android:layout_marginEnd="@dimen/default_margin_2x"
            android:layout_marginTop="@dimen/default_margin"
            style="@style/DefaultText"
            android:alpha="0.5"
            android:text="@string/verify_phone_hint"
            android:textAlignment="center"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"/>
        <Button
            android:onClick="onNext"
            android:layout_marginBottom="@dimen/default_margin_2x"
            style="@style/DefaultButton.Dark"
            android:text="@string/send_code"/>

        <include layout="@layout/numpad"/>
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStartWithNavigation="0dp">

        <TextView
            android:id="@+id/txtTitle"
            style="@style/TitleText"
            android:text="@string/forgot_username"
            android:visibility="gone"/>
    </androidx.appcompat.widget.Toolbar>

    <include layout="@layout/progress"/>
</FrameLayout>
