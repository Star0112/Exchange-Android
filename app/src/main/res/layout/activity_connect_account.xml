<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            style="@style/TitleText.Dark"
            android:text="@string/connect_account"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_margin_2x"
        android:paddingEnd="@dimen/default_margin_2x">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_status"
            android:backgroundTint="@color/colorWhite"
            android:elevation="8dp"
            android:padding="@dimen/default_margin_xlarge">

            <ImageView
                android:layout_width="@dimen/avatar_size_small"
                android:layout_height="@dimen/avatar_size_small"
                android:src="@mipmap/ic_bank_add"/>
        </FrameLayout>
        <TextView
            android:layout_marginTop="@dimen/default_margin_2x"
            style="@style/TitleText"
            android:text="@string/choose_account_type"
            android:textSize="@dimen/text_title"/>
        <LinearLayout
            android:id="@+id/llSelectType"
            android:layout_marginTop="@dimen/default_margin_2x"
            style="@style/SettingButton">

            <TextView
                android:id="@+id/txtType"
                android:layout_weight="1"
                style="@style/TitleText"
                android:text="Checking"
                android:textSize="@dimen/text_button"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginBottom="@dimen/default_margin_2x"
        android:onClick="onContinue"
        style="@style/DefaultButton.Dark"
        android:text="@string/button_continue"/>
</LinearLayout>
