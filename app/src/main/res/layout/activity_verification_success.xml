<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorPink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/success_password"/>
        <TextView
            android:id="@+id/txtTitle"
            android:layout_marginTop="@dimen/default_margin_2x"
            style="@style/TitleText.Dark"
            android:lineSpacingExtra="8dp"
            android:textSize="@dimen/text_sub_title"
            android:text="@string/thank_you"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtDescription"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            style="@style/DefaultText"
            android:alpha="0.5"
            android:lineSpacingExtra="8dp"
            android:text="@string/phone_verify_success"
            android:textAlignment="center"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/text_title_default"/>
    </LinearLayout>

    <Button
        android:layout_marginBottom="@dimen/default_margin_large"
        android:onClick="onNext"
        style="@style/DefaultButton"
        android:text="@string/button_ok"/>

</LinearLayout>
