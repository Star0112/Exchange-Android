<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_header_height">

            <ImageView
                android:id="@+id/btnBack"
                style="@style/DialogCancelButton.Back"/>
            <TextView
                android:id="@+id/txtTitle"
                style="@style/DialogTitleText"
                android:text="@string/create_pin"/>
            <ImageView
                android:id="@+id/btnClose"
                style="@style/DialogCancelButton"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            android:paddingTop="@dimen/default_margin_2x"
            android:paddingBottom="@dimen/default_margin_2x">

            <TextView
                android:id="@+id/txtEnter"
                android:layout_marginBottom="@dimen/default_margin"
                style="@style/ItemText"
                android:text="@string/enter_digits"/>

            <include layout="@layout/otp"/>
        </LinearLayout>

        <include layout="@layout/numpad"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_margin" />
    </LinearLayout>

    <include layout="@layout/progress"/>
</FrameLayout>
