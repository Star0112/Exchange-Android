<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp"
            app:theme="@style/ToolbarColoredBackArrow">

            <TextView
                android:id="@+id/txtTitle"
                style="@style/TitleText"
                android:text="@string/password"/>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLabel"
                android:layout_marginStart="@dimen/default_margin_large"
                style="@style/DefaultText"
                android:alpha="0.3"
                android:text="@string/password_input_label"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText"
                    android:imeActionLabel="@string/button_go"
                    android:imeOptions="actionGo"
                    android:inputType="textPassword"
                    android:paddingEnd="@dimen/default_margin_3x"
                    style="@style/LoginInput">
                </EditText>
                <ImageView
                    android:id="@+id/imgEye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:elevation="3dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginEnd="@dimen/default_margin_3x"
                    android:onClick="onShowPassword"
                    android:padding="@dimen/default_padding_small"
                    android:src="@mipmap/ic_eye_off"
                    android:visibility="visible"/>
            </FrameLayout>
        </LinearLayout>
        <Button
            android:onClick="onNext"
            android:layout_margin="@dimen/default_margin_2x"
            style="@style/DefaultButton.Dark"
            android:text="@string/button_next"/>
    </LinearLayout>

    <include layout="@layout/progress"/>
</FrameLayout>
