<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <include layout="@layout/back_white" />
        <TextView
            style="@style/TitleText"
            android:text="@string/title_bank"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            android:layout_marginTop="@dimen/default_margin_xxxlarge"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/default_padding"
                android:paddingEnd="@dimen/default_padding">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_margin="@dimen/default_margin"
                            style="@style/DefaultText"
                            android:text="@string/my_account"
                            android:textColor="@color/textColorGray"/>
                        <TextView
                            android:id="@+id/txtBalance"
                            style="@style/ItemTextBold"
                            android:textSize="@dimen/text_title"/>
                        <TextView
                            android:layout_margin="@dimen/default_margin"
                            style="@style/DefaultText"
                            android:text="@string/cash_account"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/default_padding"
                            android:paddingEnd="@dimen/default_padding">

                            <Button
                                android:id="@+id/btnWithdraw"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/action_button_height"
                                android:layout_weight="1"
                                style="@style/DefaultButton"
                                android:text="@string/withdraw"
                                android:textAllCaps="false"/>
                            <Button
                                android:id="@+id/btnDeposit"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/action_button_height"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/default_padding"
                                style="@style/DefaultButton"
                                android:text="@string/deposit"
                                android:textAllCaps="false"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llViewWallet"
                            android:layout_height="@dimen/item_height_small"
                            android:layout_marginTop="@dimen/default_padding_small"
                            android:layout_marginBottom="@dimen/default_padding_small"
                            style="@style/SettingButton">

                            <ImageView
                                android:id="@+id/imgCoin"
                                android:layout_width="@dimen/coin_size_small"
                                android:layout_height="@dimen/coin_size_small"/>
                            <TextView
                                android:id="@+id/txtCoin"
                                android:layout_marginStart="@dimen/default_margin"
                                style="@style/DefaultText"
                                android:text="USD Wallet"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/ItemText"
                                    android:text="@string/view_wallet"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/text_item"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/default_margin_small"
                                android:src="@mipmap/ic_arrow_right"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txtDisclosure"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/default_margin"
                    style="@style/ItemText"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>
