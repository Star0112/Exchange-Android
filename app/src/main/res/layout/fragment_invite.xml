<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                style="@style/TitleText.White"
                android:text="@string/invite"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_description"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/default_margin"
                    android:layout_margin="@dimen/default_padding"
                    android:textAlignment="center"/>
                <EditText
                    android:id="@+id/editEmail"
                    android:imeActionLabel="@string/button_go"
                    android:imeOptions="actionGo"
                    android:inputType="textEmailAddress"
                    android:layout_marginVertical="@dimen/default_padding_small"
                    android:hint="@string/friend_email"
                    android:layout_height="@dimen/setting_item_height"
                    style="@style/Input.White.Start">
                </EditText>
                <Button
                    android:id="@+id/btnInvite"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/tab_height_small"
                    android:layout_margin="@dimen/default_margin"
                    android:text="@string/invite"
                    style="@style/DefaultButton.White"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/bg_dialog"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/friend_list"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_title_default"
                    android:layout_margin="@dimen/default_margin"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/friendList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
